<window id="newProjectWindow" title="New Project"
	xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
	width="500" height="400">

	<script type="application/x-javascript"
		src="chrome://semantic-turkey/content/projects/newProject.js" />
	<script type="application/x-javascript"
		src="chrome://semantic-turkey/content/scripts/fileChooser.js" />
	<script type="application/x-javascript"
		src="chrome://semantic-turkey/content/utilities/utilities.js" />


	<vbox id="repBox" flex="1" style="overflow: auto">
		<grid flex="1">
			<columns>
				<column width="100" />
				<column flex="1" />
			</columns>
			<rows flex="1">
				<row align="center">
					<label value="Project Name: " />
					<textbox id="projectName" value="" />
				</row>
				<row align="center">
					<label value="Project Type: " />
					<menulist id="ontologyTypeMenulist">
						<menupopup id="ontologyTypeMenupopup">
							<menuitem label="OWL" value="it.uniroma2.art.owlart.models.OWLModel"/>			
<!-- SKOS /XL PROJECTS ARE ADDED DYNAMICALLY, see newProject.js change it to static here once skos is fully supported-->
<!-- 					    <menuitem label="SKOS" value="SKOS"/> -->
<!-- 					    <menuitem label="SKOS-XL" value="SKOS-XL"/> -->
<!-- 					    <menuitem label="RDF" value="RDF"/>  -->
<!--					    <menuitem label="RDFS" value="RDFS"/>   -->
						</menupopup>
					</menulist>					
				</row>
				
				<row align="center">
					<label value="URI: " />
					<textbox id="uri" value="" />
				</row>
				
				<groupbox>
					<grid>
						<columns>
							<column width="100" />
							<column flex="1"/>
							<column width="100" />
						</columns>
						<rows flex="1">
							<row align="center">	
								<label value="Triple Store: " />
								<menulist id="tripleStoreMenulist">
									<menupopup id="tripleStoreMenupopup">
									</menupopup>
								</menulist>
							</row>
							<row align="center">
								<label value="Mode: " flex="2"/>
								<menulist id="modeMenulist" disabled="true">
									<menupopup id="modeMenupopup"/>
								</menulist>
								<button id="openTripleStoreConf" label="Configure" flex="1" disabled="true"/>
							</row>
						</rows>
					</grid>
				</groupbox>
				
				<vbox id="mandatorySettingsBox">
					<!-- This vbox will contain groupbox elements to configure mandatory ext points -->
				</vbox>
				
				<groupbox id="optionalSettingsGroupbox" hidden="true">
					<caption align="center">
						<label value="Optional settings"/>
						<toolbarbutton id="expandOptSetBtn" label="â–·" tooltiptext="Expand"/>
					</caption>
					<vbox id="optionalSettingsBox" hidden="true">
						<!-- This vbox will contain groupbox elements to configure optional ext points -->
					</vbox>
				</groupbox>
				
				<row id="fromFileRow">
					<button id="dirBtn" label="Select rdf/owl file"/>
					<textbox id="srcLocalFile" value="" />
				</row>
				
			</rows>
		</grid>
	</vbox>

	<vbox id="buttonBox" flex="0">
		<grid flex="1">
			<columns>
				<column flex="1" />
				<column flex="1" />
			</columns>
			<rows flex="1">
				<row>
					<button id="newProject" label="Ok" flex="1" />
					<button id="cancel" label="Cancel" flex="1" />
				</row>
			</rows>
		</grid>
	</vbox>
</window>


