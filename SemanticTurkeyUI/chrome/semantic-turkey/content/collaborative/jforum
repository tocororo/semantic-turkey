<script language="javascript" type="text/javascript">
<![CDATA[
	
	var server = window.arguments[0].server;
	var subject = window.arguments[0].subject;
	var ontName = readOnt();
	document.getElementById("formView").action="http://"+server+":1979/jforum/jforum.page";
	document.getElementById("topicName").value=subject;
	document.getElementById("ontName").value=ontName;
	
	//Daniele Bagni, Marco Cappella (2009): apre la finestra per l'inserimento di un novo commento associato a quella risorsa
	function newPost(){
		var parameters=new Object();
	    parameters.subject=subject;
	    parameters.server=server;
	    window.openDialog("chrome://semantic-turkey/content/jforumNewThread.xul","_blank","modal=yes,resizable,centerscreen", parameters);	
	    window.close();	
	}
	
	function windowMan(){
	
		window.resizeTo(900,500);
		window.moveTo(100, 80);
		
	}
]]>
</script>

