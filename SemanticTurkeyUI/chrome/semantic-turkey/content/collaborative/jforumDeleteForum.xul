<!-- Daniele Bagni, Marco Cappella (2009): finestra per l'eliminazione del forum associato all'ontologia appena eliminata -->
<window id="forumDelete" title="Delete Forum Window"
    xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"        
    width="275"
    height="138"  
    xmlns:html="http://www.w3.org/1999/xhtml"
>

<script type="application/x-javascript" src="chrome://semantic-turkey/content/http/http.js"/>
<script type="application/x-javascript" src="chrome://semantic-turkey/content/scripts/selectServer.js"/>
<script type="application/x-javascript" src="chrome://semantic-turkey/content/scripts/ontName.js"/>





<groupbox>
  <caption class="header" label=" - Delete Forum - " image="images/istogramma.png"/>

<vbox id="myPanel" align="center" flex="1">
<hbox id="myPanel" align="center" flex="1">
<label control="deleteForum" value="Do you want delete the associated forum?"/>
<separator orient="orizontal" class="groove">
</separator>
</hbox>
</vbox>

<vbox id="myPanel" align="center" flex="1">
<hbox id="myPanel" align="center" flex="1">

<html:form id="formForumDelete" action="http://160.80.122.247:1979/jforum/jforum.page" method="post" enctype="multipart/form-data" name="post" onsubmit="return validatePostForm(this)">
<html:input type="hidden" name="action" value="deleteForum" />
<html:input id="module" type="hidden" name="module" value="myServ" />
<html:input id="ontName" type="hidden" name="ontName" value="ggg" />

<html:table cellspacing="0" cellpadding="10" width="100%" align="center" border="0">				
	<html:tr>
		<html:td align="center" height="28" colspan="2" class="catbottom">
			<html:input class="mainoption" id="btnSubmit" accesskey="v" tabindex="6" type="submit" value="Yes" name="post" onclick="windowMan()"/>
		</html:td>
	</html:tr>
</html:table>			
</html:form>
<html:input class="mainoption" id="insert" accesskey="i" tabindex="7" type="submit" value="No"  onclick="window.close()"/>
</hbox>
</vbox>

</groupbox>
<script language="javascript" type="text/javascript">
<![CDATA[
	
	var server = window.arguments[0].server;
	var ontName = window.arguments[0].version;
	document.getElementById("formForumDelete").action="http://"+server+":1979/jforum/jforum.page";
	document.getElementById("ontName").value=ontName;
	
	function windowMan(){
	
		window.resizeTo(900,500);
		window.moveTo(100, 80);
		
	}
]]>
</script>

</window>