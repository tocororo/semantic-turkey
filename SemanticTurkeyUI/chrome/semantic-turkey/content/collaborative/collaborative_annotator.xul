</description> -->

</radiogroup>
<toolbox>
	    <toolbar id="property-toolbar">
	    <checkbox label="Show all properties" id="checkAll" oncommand="showAllProperties();"/>
		</toolbar>
</toolbox>
<tree id="annotatorTree" disabled="false" flex="1">
  <treecols>
    <treecol id="sender" label="Property" flex="1"/>
    <!--NScarpato 12/05/2007 Modificato albero property
    <treecol id="subject" label="Range" flex="2"/>
    <treecol id="value" label="Value" flex="3"/>
     <treecol id="domain" label="Domain" flex="4"/> -->		
  </treecols>

  <treechildren>
    
  </treechildren>
</tree> 

<hbox orient ="horizontal">
<vbox orient ="horizontal" flex ="1">	
	<button id="ok" label="ok" class="dialog" onclick="onAccept()"/>
	<spacer flex ="1"/>
	<button id="cancel" label="cancel" class="dialog" onclick="close()"/>
</vbox >
</hbox>
