<script type="application/x-javascript">
   <![CDATA[

var radiolexNode = document.getElementById("radiolex");            
radiolexNode.setAttribute("label", "\"" + objectInstanceName + "\" is a further annotation of \"" + subjectInstanceName + "\"");

var radiopropNode = document.getElementById("radioprop");            
radiopropNode.setAttribute("label", "\"" + objectInstanceName + "\" is a range instance of a property of \"" + subjectInstanceName + "\"");
      
 ]]> 
</script> 

