<!-- Daniele Bagni, Marco Cappella (2009): finestra per la creazione di una nuova versione di una ontologia giï¿½ esistente -->
<window id="version" title="Create Version Dialog"
        xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"	
	
	width="300"
	height="160"
>

<script type="application/x-javascript" src="chrome://semantic-turkey/content/http/http.js"/>
<script type="application/x-javascript" src="chrome://semantic-turkey/content/http/administration.js"/>
<script type="application/x-javascript" src="chrome://semantic-turkey/content/scripts/versioning.js"/>
<script type="application/x-javascript" src="chrome://semantic-turkey/content/scripts/selectServer.js"/>

<groupbox id="mainbox">
  <caption class="header" label=" - New Version - " image="images/st_favicon.png"/>

<vbox id="myPanel" align="center" flex="1">
	<hbox id="myPanel" align="center" flex="1">
    	<label value="Select new version:"/>
    </hbox>
</vbox>
<separator orient="orizontal" class="groove">
</separator>
<vbox id="myPanel" align="center" flex="1">
	<hbox id="myhbox" align="center" flex="1">
    	
    	
	</hbox>
</vbox>
<vbox id="myPanel" align="center" flex="1">
	<hbox  align="center" flex="1">
     	<button id="mybutton" label="Ok" onclick="onAccept()"/>
    	<button label="Cancel" onclick="window.close()"/>   	
    	
	</hbox>
</vbox>
</groupbox>
<script type="application/x-javascript">
   <![CDATA[
   if (typeof art_semanticturkey == 'undefined') var art_semanticturkey = {};
Components.utils.import("resource://stmodules/SemTurkeyHTTP.jsm", art_semanticturkey);
Components.utils.import("resource://stmodules/Logger.jsm", art_semanticturkey);
   
   	   //Daniele Bagni, Marco Cappella (2009):
   		var version = window.arguments[0].version;
       	var tree = window.arguments[0].tree;
   
   		var oldVersion=version.last;
   		var index;
   		for(index=0;index<oldVersion.length;index++)
   			if(oldVersion.substring(index,index+1)==".")
   				break;
   
   		var versionNumber =parseInt(oldVersion.substring(0,index));
   		var releaseNumber =parseInt(oldVersion.substring(index+1));
   		var myhbox = document.getElementById("myhbox");
   		var labelpoint = document.createElement("label");
   		labelpoint.setAttribute("value","."+(releaseNumber+1));
   		labelpoint.setAttribute("id","labelp");

  		var menulst = document.createElement("menulist");
  
	   	menulst.setAttribute("id","version1");
	   	var menuppp = document.createElement("menupopup");
	   	
	   		   
	   		 
		var menuite = document.createElement("menuitem");
		menuite.setAttribute("label",versionNumber);

		menuite.setAttribute("onclick","activateSecond(versionNumber)");

		var menuite0 = document.createElement("menuitem");
		menuite0.setAttribute("label",versionNumber+1);

		menuite0.setAttribute("onclick","activateSecond(versionNumber+1)");
		
		menuppp.appendChild(menuite);
		menuppp.appendChild(menuite0);
		menulst.appendChild(menuppp);
   		myhbox.appendChild(menulst);
   		myhbox.appendChild(labelpoint);
   				
			   
		var finalVersion=versionNumber+"."+(releaseNumber+1);	  
   
   
        //Daniele Bagni, Marco Cappella (2009)
   		function activateSecond(newversion){
   		
   			if(newversion==parseInt(oldVersion.substring(0,index))){
   				document.getElementById("labelp").value="."+(releaseNumber+1);
   				finalVersion = newversion+"."+(releaseNumber+1);
   			}
   			else{
   				document.getElementById("labelp").value=".0";
   				finalVersion = newversion+".0"
   			}
   		}

       //Daniele Bagni, Marco Cappella (2009):funzione per l'invio della versione selezionata
       function onAccept() {    
       
         	var server = readServer();
		
		 	var parameterss = new Object(); 
		 
		 	var type="version";
      	 	parameterss.server=server;
      	 	parameterss.ontName=finalVersion;
      	 	parameterss.type=type;
      	 	parameterss.versioningTree=tree;
      	 	art_semanticturkey.HttpMgr.GETP("http://"+server+":1979/semantic_turkey/resources/stserver/STServer?service=selectOntology&version="+finalVersion+"&funct=newVersion&oldversion="+version.parentName+"-"+version.version,false, parameterss);
    		window.close();
       }       
   ]]>
</script> 


</window>


