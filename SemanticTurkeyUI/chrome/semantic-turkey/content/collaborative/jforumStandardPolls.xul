<!-- Daniele Bagni, Marco Cappella (2009):finestra per la votazione dei sondaggi standard associati a tutte le triple relative alla risorsa -->
<window id="forumview" title="Poll Management Window"
    xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"        
    width="500"
    height="307"  
>

<script type="application/x-javascript" src="chrome://semantic-turkey/content/http/http.js"/>
<script type="application/x-javascript" src="chrome://semantic-turkey/content/scripts/selectServer.js"/>

<groupbox>
  <caption class="header" label=" - Standard Polls - " image="images/istogramma.png"/>


<grid flex="1" style="overflow:auto" height="200">
  <columns  flex="1" style="overflow:auto">
  	<column flex="4" style="overflow:auto"/>
  	<column flex="1" style="overflow:auto"/>
  </columns>
  <rows id="parentBoxRows" style="overflow:auto">
  </rows>  
</grid>
</groupbox>
	
<vbox id="myPanel" align="center" flex="1">
<hbox id="myPanel" align="center" flex="1">
<button id="Exit" label="Exit" oncommand="window.close()"/>
</hbox>
</vbox>	
	
<script language="javascript" type="text/javascript">
<![CDATA[

if (typeof art_semanticturkey == 'undefined') var art_semanticturkey = {};
Components.utils.import("resource://stmodules/SemTurkeyHTTP.jsm", art_semanticturkey);
Components.utils.import("resource://stmodules/Logger.jsm", art_semanticturkey);

	
	var server = window.arguments[0].server;
	var name = window.arguments[0].name;
	art_semanticturkey.HttpMgr.GETP("http://"+server+":1979/semantic_turkey/resources/stserver/STServer?service=tripleList&objTriple="+name);
	var subject = window.arguments[0].subject;	
	var type = window.arguments[0].type;
	var lun = type.length-2;
	var nomeType = type.substr(1,lun);

	//Daniele Bagni, Marco Cappella (2009): funzione che apre una nuova finestra in cui sarï¿½ possibile votare il sondaggio selezionato
	function votePoll(num){

		var parameters2 = new Object();
		var qq =document.getElementById("label"+num).value;
		parameters2.question=qq;
		parameters2.title = "[Standard_"+nomeType+"_"+name+"]"+qq;
		window.openDialog("chrome://semantic-turkey/content/vote.xul","_blank","modal=yes,resizable,centerscreen", parameters2);
		document.getElementById("button"+num).disabled=true;
	}

]]>
</script>

</window>