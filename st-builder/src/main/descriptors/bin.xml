<assembly>

	<id>bin</id>

	<formats>
		<format>zip</format>
	</formats>
	
	<fileSets>

		<!-- Copy over bin/* separately to get the correct file mode -->
		<fileSet>
			<directory>src/main/distribution/bin</directory>
			<outputDirectory>bin/</outputDirectory>
			<fileMode>0755</fileMode>
		</fileSet>

		<!-- Copy over etc/* separately to get the correct file mode -->
		<fileSet>
			<directory>src/main/distribution/etc</directory>
			<outputDirectory>etc/</outputDirectory>
			<fileMode>0644</fileMode>
		</fileSet>

		<!-- Copy over (filtered) etc/* separately to get the correct file mode -->
		<fileSet>
			<directory>${project.basedir}/target/classes/etc</directory>
			<outputDirectory>etc/</outputDirectory>
			<includes>
				<include>*.cfg</include>
			</includes>
			<fileMode>0644</fileMode>
		</fileSet>

		<!-- Copy over (filtered) BUILD.txt to the right place -->
		<fileSet>
			<directory>${project.basedir}/target/classes/</directory>
			<outputDirectory></outputDirectory>
			<includes>
				<include>BUILD.txt</include>
			</includes>
			<fileMode>0644</fileMode>
		</fileSet>

		<!-- Copy the local Maven repository generated by the installed features -->
		<fileSet>
			<directory>${project.basedir}/target/features-repo</directory>
			<outputDirectory>system/</outputDirectory>
		</fileSet>

		<!-- Copy the JAR containing the console branding -->
		<fileSet>
			<directory>${project.parent.basedir}/st-console/target</directory>
			<outputDirectory>lib/</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
			<fileMode>0755</fileMode>
		</fileSet>

		<!-- Copy etc/* containing configuration files of dependencies -->
		<fileSet>
			<directory>${project.basedir}/target/dependencies/etc</directory>
			<outputDirectory>etc/</outputDirectory>
			<includes>
				<include>*.cfg</include>
			</includes>
			<fileMode>0644</fileMode>
		</fileSet>
	
		<!-- Expanded Karaf Standard Distribution -->
		<fileSet>
			<directory>${project.basedir}/target/dependencies/apache-karaf-${karaf.version}</directory>
			<outputDirectory></outputDirectory>
			<excludes>
				<exclude>**/demos/**</exclude>
				<exclude>bin/**</exclude>
				<exclude>LICENSE</exclude>
				<exclude>NOTICE</exclude>
				<exclude>README</exclude>
				<exclude>RELEASE-NOTES</exclude>
				<exclude>karaf-manual*.html</exclude>
				<exclude>karaf-manual*.pdf</exclude>
			</excludes>
		</fileSet>

		<!-- Copy over bin/* separately to get the correct file mode -->
		<fileSet>
			<directory>${project.basedir}/target/dependencies/apache-karaf-${karaf.version}/bin
			</directory>
			<outputDirectory>bin/</outputDirectory>
			<includes>
				<include>*.bat</include>
			</includes>
			<excludes>
				<exclude>karaf.bat</exclude>
			</excludes>
			<fileMode>0755</fileMode>
		</fileSet>
	</fileSets>

	<files>

		<file>
			<source>${project.basedir}/target/dependencies/apache-karaf-${karaf.version}/bin/karaf.bat
			</source>
			<outputDirectory>bin/</outputDirectory>
			<destName>st_server_run.bat</destName>
			<fileMode>0755</fileMode>
		</file>

		<file>
			<source>${project.basedir}/target/dependencies/apache-karaf-${karaf.version}/bin/karaf.bat
			</source>
			<outputDirectory>bin/</outputDirectory>
			<destName>karaf.bat</destName>
			<fileMode>0755</fileMode>
		</file>
		
		<!-- Copy the Semantic Turkey feature -->
		<file>
			<source>${project.basedir}/target/classes/semanticturkey.xml</source>
			<outputDirectory>system/it/uniroma2/art/semanticturkey/${project.artifactId}/${project.version}/
			</outputDirectory>
			<destName>${project.artifactId}-${project.version}-features.xml
			</destName>
			<fileMode>0644</fileMode>
		</file>
	</files>
</assembly>