<assembly>

	<id>bin</id>

	<formats>
		<format>zip</format>
	</formats>

	<fileSets>

		<!-- Expanded Karaf Standard Distribution -->
		<fileSet>
			<directory>${project.basedir}/target/dependencies/apache-karaf-${karaf.version}</directory>
			<outputDirectory>/</outputDirectory>
			<excludes>
				<exclude>**/demos/**</exclude>
				<exclude>bin/**</exclude>
				<exclude>etc/org.apache.karaf.features.cfg</exclude>
				<exclude>etc/org.ops4j.pax.logging.cfg</exclude>
				<exclude>etc/org.ops4j.pax.web.cfg</exclude> 
				<exclude>LICENSE</exclude>
				<exclude>NOTICE</exclude>
				<exclude>README</exclude>
				<exclude>RELEASE-NOTES</exclude>
				<exclude>karaf-manual*.html</exclude>
				<exclude>karaf-manual*.pdf</exclude>
				<exclude>system/org/apache/karaf/assemblies/features/enterprise/${karaf.version}/*.xml</exclude> <!-- to remove the duplication of a file -->
				<exclude>system/org/apache/karaf/assemblies/features/standard/${karaf.version}/*.xml</exclude> <!-- to remove the duplication of a file -->
				<exclude>system/org/apache/karaf/deployer/org.apache.karaf.deployer.spring/${karaf.version}/*.jar</exclude> <!-- to remove the duplication of a file -->
			</excludes>
		</fileSet>

		<!-- Copy over bin/* separately to get the correct file mode -->
		<fileSet>
			<directory>${project.basedir}/target/dependencies/apache-karaf-${karaf.version}</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>bin/admin.bat</include>
				<include>bin/karaf.bat</include>
				<include>bin/start.bat</include>
				<include>bin/stop.bat</include>
			</includes>
			<fileMode>0755</fileMode>
		</fileSet>

		<!-- Copy over bin/* separately to get the correct file mode -->
		<fileSet>
			<directory>src/main/distribution</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>bin/admin</include>
				<include>bin/karaf</include>
				<include>bin/st_server_run</include>
				<include>bin/start</include>
				<include>bin/stop</include>
			</includes>
			<fileMode>0755</fileMode>
		</fileSet>

		<fileSet>
			<directory>src/main/distribution/etc/</directory>
			<outputDirectory>/etc/</outputDirectory>
			<includes>
				<include>*.cfg</include>
			</includes>
			<fileMode>0644</fileMode>
		</fileSet>
		
		<fileSet>
			<directory>${project.basedir}/target/classes/etc</directory>
			<outputDirectory>/etc/</outputDirectory>
			<includes>
				<include>*.cfg</include>
			</includes>
			<fileMode>0644</fileMode>
		</fileSet>

		<fileSet>
			<directory>${project.basedir}/target/features-repo</directory>
			<outputDirectory>/system</outputDirectory>
		</fileSet>

		<fileSet>
			<directory>${project.parent.basedir}/st-console/target</directory>
			<outputDirectory>/lib/</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
			<fileMode>0755</fileMode>
		</fileSet>

	</fileSets>

	<files>
	
		<file>
			<source>${project.basedir}/target/dependencies/apache-karaf-2.3.3/bin/karaf.bat
			</source>
			<outputDirectory>/bin/</outputDirectory>
			<destName>st_server_run.bat</destName>
			<fileMode>0755</fileMode>
		</file>


		<file>
			<source>${project.basedir}/target/classes/semanticturkey.xml</source>
			<outputDirectory>/system/it/uniroma2/art/semanticturkey/${project.artifactId}/${project.version}/</outputDirectory>
			<destName>${project.artifactId}-${project.version}-features.xml</destName>
			<fileMode>0644</fileMode>
		</file>

	</files>

</assembly>